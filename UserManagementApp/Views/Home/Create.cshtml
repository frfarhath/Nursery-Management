@model UserManagementApp.Models.User

<h2 style="color: #071952; margin-bottom: 20px;">Add New User</h2>

<form asp-action="Create" method="post" style="max-width: 500px; background-color: #EBF4F6; padding: 20px; border-radius: 10px; box-shadow: 0 2px 6px rgba(0,0,0,0.1);">
    <div class="form-group mb-3">
        <label asp-for="Username" style="color: #088395; font-weight: 600;"></label>
        <input asp-for="Username" class="form-control" 
               style="background-color: white; border: 1.5px solid #37B7C3; border-radius: 6px; color: #071952; padding: 8px 12px;" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Password" style="color: #088395; font-weight: 600;"></label>
        <input asp-for="Password" type="password" class="form-control" 
               style="background-color: white; border: 1.5px solid #37B7C3; border-radius: 6px; color: #071952; padding: 8px 12px;" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="Role" style="color: #088395; font-weight: 600;"></label>
        <select asp-for="Role" class="form-control"
                asp-items="@(new SelectList(new[] { "Admin", "User", "Principal", "Teacher", "Assistant Teacher" }))"
                style="background-color: white; border: 1.5px solid #37B7C3; border-radius: 6px; color: #071952; padding: 8px 12px;">
            <option value="">-- Select Role --</option>
        </select>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>

    <div style="display: flex; gap: 15px;">
        <button type="submit" class="btn btn-success" 
                style="background-color: #37B7C3; border-color: #37B7C3; font-weight: 600; padding: 10px 20px; border-radius: 6px; box-shadow: 0 3px 6px rgba(3,77,92,0.4);">
            Create
        </button>
        <a asp-action="Index" class="btn btn-secondary" 
           style="background-color: #6c757d; border-color: #6c757d; color: white; padding: 10px 20px; font-weight: 600; border-radius: 6px; box-shadow: 0 3px 6px rgba(108,117,125,0.4); text-decoration: none; display: inline-flex; align-items: center; justify-content: center;">
            Cancel
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
