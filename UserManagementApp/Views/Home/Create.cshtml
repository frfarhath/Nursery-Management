@model UserManagementApp.Models.User

<h2 style="color: #071952; margin-bottom: 20px;">Add New User</h2>

<form asp-action="Create" method="post"
    style="max-width: 500px; background-color: #EBF4F6; padding: 20px; border-radius: 10px; box-shadow: 0 2px 6px rgba(0,0,0,0.1);">

    <div class="form-group mb-3">
        <label asp-for="Username" style="color: #088395; font-weight: 600;"></label>
        <input asp-for="Username" class="form-control"
            style="background-color: white; border: 1.5px solid #37B7C3; border-radius: 6px; color: #071952; padding: 8px 12px;" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Password" style="color: #088395; font-weight: 600;"></label>
        <input asp-for="Password" type="password" class="form-control"
            style="background-color: white; border: 1.5px solid #37B7C3; border-radius: 6px; color: #071952; padding: 8px 12px;" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="Role" style="color: #088395; font-weight: 600;"></label>
        <select asp-for="Role" class="form-control"
            asp-items="@(new SelectList(new[] { "Admin", "User", "Principal", "Teacher", "Assistant Teacher" }))"
            style="background-color: white; border: 1.5px solid #37B7C3; border-radius: 6px; color: #071952; padding: 8px 12px;">
            <option value="">-- Select Role --</option>
        </select>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>

    <div style="display: flex; gap: 15px;">
        <button type="submit" class="btn btn-success save-btn">
            <i class="bi bi-plus-circle me-1"></i> Create
        </button>
        <a asp-action="Index" class="btn btn-secondary cancel-btn">
            <i class="bi bi-x-circle me-1"></i> Cancel
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
