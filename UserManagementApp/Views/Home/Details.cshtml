@model UserManagementApp.Models.User

<h2 style="color: #071952; margin-bottom: 20px;">User Details</h2>

<div style="max-width: 500px; background-color: #EBF4F6; padding: 20px; border-radius: 10px; box-shadow: 0 2px 6px rgba(0,0,0,0.1);">
    <div style="margin-bottom: 18px;">
        <h5 style="color: #088395; margin-bottom: 6px;">User ID</h5>
        <div style="background-color: white; border: 1.5px solid #37B7C3; border-radius: 6px; padding: 10px; color: #071952;">
            @Model.Id
        </div>
    </div>

    <div style="margin-bottom: 18px;">
        <h5 style="color: #088395; margin-bottom: 6px;">Username</h5>
        <div style="background-color: white; border: 1.5px solid #37B7C3; border-radius: 6px; padding: 10px; color: #071952;">
            @Model.Username
        </div>
    </div>

    <div style="margin-bottom: 18px;">
        <h5 style="color: #088395; margin-bottom: 6px;">Password</h5>
        <div style="background-color: white; border: 1.5px solid #37B7C3; border-radius: 6px; padding: 10px; color: #071952; font-family: monospace;">
            @Model.Password
        </div>
    </div>

    <div style="margin-bottom: 18px;">
        <h5 style="color: #088395; margin-bottom: 6px;">Role</h5>
        <div style="background-color: white; border: 1.5px solid #37B7C3; border-radius: 6px; padding: 10px; color: #071952;">
            @Model.Role
        </div>
    </div>
</div>

<a asp-action="Index" 
   style="display: inline-block; margin-top: 20px; padding: 8px 18px; background-color: #37B7C3; color: white; text-decoration: none; border-radius: 6px; font-weight: 600; box-shadow: 0 3px 6px rgba(3,77,92,0.4);">
    Back to List
</a>
