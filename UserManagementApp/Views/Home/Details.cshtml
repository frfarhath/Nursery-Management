@model UserManagementApp.Models.User

<h2 style="color: #071952; margin-bottom: 20px;">User Details</h2>

<div style="max-width: 500px; background-color: #EBF4F6; padding: 20px; border-radius: 10px; box-shadow: 0 2px 6px rgba(0,0,0,0.1);">

    <div class="form-group mb-4">
        <label style="color: #088395; font-weight: 600;">
            Username <i class="bi bi-lock-fill" title="Read-only field" style="color: #888; font-size: 0.9em;"></i>
        </label>
        <input class="form-control" value="@Model.Username" readonly
               style="background-color: #f8f9fa; border: 1.5px solid #ccc; border-radius: 6px; color: #071952; padding: 8px 12px;" />
    </div>

    <div class="form-group mb-4">
        <label style="color: #088395; font-weight: 600;">
            Role <i class="bi bi-lock-fill" title="Read-only field" style="color: #888; font-size: 0.9em;"></i>
        </label>
        <input class="form-control" value="@Model.Role" readonly
               style="background-color: #f8f9fa; border: 1.5px solid #ccc; border-radius: 6px; color: #071952; padding: 8px 12px;" />
    </div>

    <a asp-action="Index" class="btn btn-secondary back-btn">
        <i class="bi bi-arrow-left-circle me-1"></i> Back to List
    </a>
</div>

<style>
    .back-btn {
        background-color: #6c757d;
        border-color: #6c757d;
        color: white;
        padding: 10px 20px;
        font-weight: 600;
        border-radius: 6px;
        box-shadow: 0 3px 6px rgba(108,117,125,0.4);
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .back-btn:hover {
        background-color: #5a6268;
        border-color: #545b62;
    }
</style>
