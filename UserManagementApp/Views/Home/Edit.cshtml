@model UserManagementApp.Models.User

<h2 style="color: #071952; margin-bottom: 20px;">Edit User</h2>

<form asp-action="Edit" method="post"
    style="max-width: 500px; background-color: #EBF4F6; padding: 20px; border-radius: 10px; box-shadow: 0 2px 6px rgba(0,0,0,0.1);">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-4">
        <label asp-for="Username" style="color: #088395; font-weight: 600;">
            Username
        </label>
        <input asp-for="Username" class="form-control"
            style="background-color: white; border: 1.5px solid #ccc; border-radius: 6px; color: #071952; padding: 8px 12px;" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="Role" style="color: #088395; font-weight: 600;">Role</label>
        <select asp-for="Role" class="form-control"
            asp-items="@(new SelectList(new[] { "Admin", "User", "Principal", "Teacher", "Assistant Teacher" }))"
            style="background-color: white; border: 1.5px solid #37B7C3; border-radius: 6px; color: #071952; padding: 8px 12px;">
            <option value="">-- Select Role --</option>
        </select>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>

    <div style="display: flex; gap: 15px;">
        <button type="submit" class="btn btn-success save-btn">
            <i class="bi bi-check-circle me-1"></i> Save
        </button>
        <a asp-action="Index" class="btn btn-secondary cancel-btn">
            <i class="bi bi-x-circle me-1"></i> Cancel
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .save-btn {
        background-color: #37B7C3;
        border-color: #37B7C3;
        font-weight: 600;
        padding: 10px 20px;
        border-radius: 6px;
        box-shadow: 0 3px 6px rgba(3, 77, 92, 0.4);
        color: white;
    }

    .save-btn:hover {
        background-color: #2fa1ad;
        border-color: #2fa1ad;
    }

    .cancel-btn {
        background-color: #6c757d;
        border-color: #6c757d;
        color: white;
        padding: 10px 20px;
        font-weight: 600;
        border-radius: 6px;
        box-shadow: 0 3px 6px rgba(108, 117, 125, 0.4);
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .cancel-btn:hover {
        background-color: #5a6268;
        border-color: #545b62;
    }
</style>
