@model IEnumerable<UserManagementApp.Models.User>

<h2 style="color: #071952; margin-bottom: 20px;">Users List</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div id="successAlert" class="alert alert-success alert-dismissible fade show" role="alert"
        style="max-width: 600px; margin-bottom: 20px; border-radius: 8px;">
        <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" aria-label="Close" onclick="dismissAlert()"></button>
    </div>
}

<a asp-action="Create" class="btn btn-success mb-3 create-btn">
    <i class="bi bi-person-plus me-1"></i> Add New User
</a>

<table class="table table-striped table-hover shadow-sm" style="border: 2px solid #071952;">
    <thead class="text-white" style="background-color: #071952;">
        <tr>
            <th class="text-center" style="border-right: 1px solid #ccc;">Username</th>
            <th class="text-center" style="border-right: 1px solid #ccc;">Role</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td class="text-center" style="border-right: 1px solid #eee;">@user.Username</td>
                <td class="text-center" style="border-right: 1px solid #eee;">@user.Role</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm edit-btn" title="Edit">
                        <i class="bi bi-pencil-square me-1"></i> Edit
                    </a>
                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm mx-1 details-btn" title="Details">
                        <i class="bi bi-search me-1"></i> Details
                    </a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm delete-btn" title="Delete">
                        <i class="bi bi-trash me-1"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .create-btn {
        background-color: #37B7C3;
        border-color: #37B7C3;
        color: white;
    }

    .create-btn:hover {
        background-color: #2fa1ad;
        border-color: #2fa1ad;
    }

    .edit-btn {
        background-color: #088395;
        border-color: #088395;
        color: white;
    }

    .edit-btn:hover {
        background-color: #066f7e;
        border-color: #066f7e;
    }

    .details-btn {
        background-color: #37B7C3;
        border-color: #37B7C3;
        color: white;
    }

    .details-btn:hover {
        background-color: #2fa1ad;
        border-color: #2fa1ad;
    }

    .delete-btn {
        background-color: #c82333;
        border-color: #bd2130;
        color: white;
    }

    .delete-btn:hover {
        background-color: #a71d2a;
        border-color: #a71d2a;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
        padding: 12px 20px;
        font-weight: 600;
        display: flex;
        align-items: center;
        border-radius: 8px;
        box-shadow: 0 2px 4px rgba(0, 128, 0, 0.15);
    }

    .alert-success i {
        font-size: 1.2em;
    }
</style>

@section Scripts {
    <script>
        // Function to dismiss the alert manually when close button clicked
        function dismissAlert() {
            const alert = document.getElementById('successAlert');
            if (alert) {
                alert.style.display = 'none';
            }
        }

        // Auto-dismiss the alert after 1 second (1000 ms)
        window.onload = function () {
            setTimeout(function () {
                dismissAlert();
            }, 3000);
        };
    </script>
}
