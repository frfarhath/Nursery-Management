@model IEnumerable<UserManagementApp.Models.User>

<h2 style="color: #071952; margin-bottom: 20px;">User List</h2>

<a asp-action="Create" class="btn btn-success mb-3" style="background-color: #37B7C3; border-color: #37B7C3;">
    <i class="fa-solid fa-user-plus me-1"></i> Add New User
</a>

<table class="table table-striped table-hover shadow-sm" style="border: 2px solid #071952;">
    <thead class="text-white" style="background-color: #071952;">
        <tr>
            <th class="text-center" style="border-right: 1px solid #ccc;">Username</th>
            <th class="text-center" style="border-right: 1px solid #ccc;">Role</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td class="text-center" style="border-right: 1px solid #eee;">@user.Username</td>
                <td class="text-center" style="border-right: 1px solid #eee;">@user.Role</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@user.Id"
                       class="btn btn-sm"
                       style="background-color: #088395; border-color: #088395; color: white;"
                       title="Edit">
                        <i class="fa-solid fa-edit me-1"></i> Edit
                    </a>
                    <a asp-action="Details" asp-route-id="@user.Id"
                       class="btn btn-sm mx-1"
                       style="background-color: #37B7C3; border-color: #37B7C3; color: white;"
                       title="Details">
                        <i class="fa-solid fa-search me-1"></i> Details
                    </a>
                    <a asp-action="Delete" asp-route-id="@user.Id"
                       class="btn btn-sm"
                       style="background-color: #c82333; border-color: #bd2130; color: white;"
                       title="Delete">
                        <i class="fa-solid fa-trash me-1"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
